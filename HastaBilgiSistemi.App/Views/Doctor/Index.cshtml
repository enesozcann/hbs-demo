@model HastaBilgiSistemi.Entities.Dtos.HospitalListDto
@using HastaBilgiSistemi.Shared.Utilities.Results.ComplexTypes
@{ Layout = "_Layout";
    ViewBag.Title = "Doktorlar"; }

@if (Model.ResultStatus == ResultStatus.Success)
{
<nav aria-label="breadcrumb" class='breadcrumb-header'>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Anasayfa</a></li>
        <li class="breadcrumb-item " aria-current="page">Doktor</li>
        <li class="breadcrumb-item active" aria-current="page">Doktor Listesi</li>
    </ol>
</nav>
                <div class="card">
                    <div class="card-header">Hastane Seçiniz</div>
                    <div class="card-body">
                        <div class="form-group">
                            <select id="hospitalList" class="form-control w-100" asp-items="@(new SelectList(Model.Hospitals,"Id","Name"))">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="polyclinicList" class="form-control">
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
                                <div class="card mt-3">
                                    <div class="card-header">
                                        Randevu Listesi
                                    </div>
                                    <div class="card-body">
                                        <div class="spinner-border" role="status" style="display:none;">
                                            <span class="sr-only">Randevular getiriliyor...</span>
                                        </div>
                                        <table class='table table-striped' id="doctorsTable" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Ad Soyad</th>
                                                    <th>Poliklinik</th>
                                                    <th>E-Mail</th>
                                                    <th>Telefon</th>
                                                    <th>Fotoğraf</th>
                                                    <th>İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>}
@if (Model.ResultStatus == ResultStatus.Error)
{
<div class="alert alert-danger">
    <h4 class="alert-heading">Hata!</h4>
    <p>@Model.Message</p>
</div>}

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/assets/js/pages/doctorIndex.js" type="application/ecmascript"></script>
}

@section Styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/select2/select2-bootstrap4.min.css" rel="stylesheet" />
}