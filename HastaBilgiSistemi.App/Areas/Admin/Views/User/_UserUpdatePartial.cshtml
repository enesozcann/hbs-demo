@model HastaBilgiSistemi.Entities.Dtos.UserUpdateDto
    <!--primary theme Modal -->
    <div class="modal fade text-left" id="primary" tabindex="-1"
         role="dialog" aria-labelledby="myModalLabel160"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
             role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title white" id="myModalLabel160">
                        Kullanıcı Düzenle
                    </h5>
                    <button type="button" class="close"
                            data-bs-dismiss="modal" aria-label="İptal">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="Update" id="form-user-update">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
                        <input asp-for="Id" type="hidden" />
                        <div class="form-group has-icon-left">
                            <label asp-for="UserName"></label>
                            <div class="position-relative">
                                <input class="form-control" asp-for="UserName" placeholder="Lütfen, kullanıcı adı giriniz." />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                                <div class="form-control-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group has-icon-left">
                            <label asp-for="FirstName"></label>
                            <div class="position-relative">
                                <input class="form-control" asp-for="FirstName" placeholder="Lütfen, ad giriniz." />
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                                <div class="form-control-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group has-icon-left">
                            <label asp-for="LastName"></label>
                            <div class="position-relative">
                                <input class="form-control" asp-for="LastName" placeholder="Lütfen, soyad giriniz." />
                                <span class="text-danger" asp-validation-for="LastName"></span>
                                <div class="form-control-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group has-icon-left">
                            <label asp-for="Email"></label>
                            <div class="position-relative">
                                <input class="form-control" asp-for="Email" placeholder="Lütfen, e-posta adresi giriniz." />
                                <span class="text-danger" asp-validation-for="Email"></span>
                                <div class="form-control-icon">
                                    <i class="fas fa-at"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group has-icon-left">
                            <label asp-for="PhoneNumber"></label>
                            <div class="position-relative">
                                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Lütfen, telefon numaranızı giriniz." />
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                <div class="form-control-icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Picture" type="hidden" />
                            <img class="img-fluid img-thumbnail" src="~/images/@Model.Picture" alt="@Model.UserName" />
                        </div>
                        <div class="form-group has-icon-left">
                            <label asp-for="PictureFile"></label>
                            <div class="position-relative">
                                <input type="file" accept="image/png" class="form-control" asp-for="PictureFile" placeholder="Lütfen, bir fotoğraf yükleyiniz." />
                                <span class="text-danger" asp-validation-for="PictureFile"></span>
                                <div class="form-control-icon">
                                    <i class="fas fa-image"></i>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-light-secondary"
                            data-bs-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">İptal</span>
                    </button>
                    <button type="button" class="btn btn-primary ml-1">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-none d-sm-block" id="btnUpdate">Kaydet</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
